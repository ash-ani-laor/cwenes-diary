generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id          Int          @id @default(autoincrement())
  login       String       @unique
  password    String
  theme       String       @default("brown")
  motto       String?
  posts       Post[]
  divinations Divination[]
  drafts      Draft[]      // <=== добавили это
}

model Post {
  id            Int          @id @default(autoincrement())
  userId        Int
  title         String
  content       String
  tags          String       // JSON stringified
  type          String       @default("diary")
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  divination    Divination?  @relation(fields: [divinationId], references: [id])
  divinationId  Int?         @unique
  user          User         @relation(fields: [userId], references: [id])
}

model Divination {
  id               Int       @id @default(autoincrement())
  userId           Int
  question         String
  questionFixedTime DateTime
  layout           String    // JSON stringified
  tags             String    // JSON stringified
  timestamp        DateTime  @default(now())
  groups           String?   // JSON stringified
  title            String
  previewImage     String?
  post             Post?
  postId           Int?
  user             User      @relation(fields: [userId], references: [id])
}

model Draft {
  id        Int      @id @default(autoincrement())
  userId    Int
  type      String
  data      String   // JSON stringified
  updatedAt DateTime @default(now()) @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}
